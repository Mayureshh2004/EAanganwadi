<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Lactating_View">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Lactating Mother"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/baseline_home_24" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/awc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/kisspng_alarm_clocks_computer_icons_clip_art_timer_clock_svg_png_icon_free_download_4_7929_onlin_5b6bff31d6dec1_7844015815338043378801"

                android:isScrollContainer="true" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/baseline_person_24"
                android:text="" />
        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Date and Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/bordered_edittext"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bordered_edittext"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Persoanl Information"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name:"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Date of Birth"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Mobile_No"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Delivery Date"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/yob"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bordered_edittext"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1.Nutrition Level"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Height Unit"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/height3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Height"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Weight (kgs)"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hemoglobin (g/dL)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/hemo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="2.Nutritional Intervention"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="I} Are you provided with"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/provided"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="II} Which type of health service are you avalling?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/avail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:id="@+id/submitI"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>


