<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Children0M6MNutrition">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Children 0  to 6 months"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Date and Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/bordered_edittext"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1.Nutritional Supplements"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="I}Are you given any nutritional supplements"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/FalicAcid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Falic Acid"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Iron1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Vitamin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Calcium1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcium"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="II}What is the Energy Intake ? (kcal/day)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/height2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the Energy Intake"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="III}What is the Protein Intake ? (g/day)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the Protein Intake"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="IV}What is the Fat Intake ? (g/day)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/hemo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the Fat Intake"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bordered_edittext"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="2.Nutritional Intervention"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="I)Is the Child On Food Solids"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/radioheight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonInch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="Yes"
                    android:layout_marginRight="30dp" />

                <RadioButton
                    android:id="@+id/radioCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="II}Hemoglobin (g/dL)"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/bordered_edittext"
                android:hint="  Enter the hemoglobin"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="III)Which type Of Health Service Are You Availing?"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/FalicAcid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allopath"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Iron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homopathy"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <CheckBox
                android:id="@+id/Vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayush"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Vaccination"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/autoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:background="@drawable/bordered_edittext"
                    android:text="Choose Vaccination"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submitI"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="20dp" />
    </LinearLayout>
</ScrollView>